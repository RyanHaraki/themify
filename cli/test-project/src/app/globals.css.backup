@tailwind base;
@tailwind components;
@tailwind utilities;
 
@layer base {
  :root {
    --background: #fff6e3;
    --foreground: #051f0e;
 
    --card: #908e81;
    --card-foreground: #051f0e;
 
    --popover: #afcac5;
    --popover-foreground: #051f0e;
 
    --primary: #fff6e3;
    --primary-foreground: #051f0e;
 
    --secondary: #afcac5;
    --secondary-foreground: #051f0e;
 
    --muted: #908e81;
    --muted-foreground: #051f0e;
 
    --accent: #afcac5;
    --accent-foreground: #051f0e;
 
    --destructive: #ff0000;
    --destructive-foreground: #ffffff;
 
    --border: #908e81;
    --input: #908e81;
    --ring: #fff6e3;
 
    --radius: 0.5rem;
  }
 
  .dark {
    --background: #fff6e3;
    --foreground: #051f0e;
 
    --card: #908e81;
    --card-foreground: #051f0e;
 
    --popover: #afcac5;
    --popover-foreground: #051f0e;
 
    --primary: #fff6e3;
    --primary-foreground: #051f0e;
 
    --secondary: #afcac5;
    --secondary-foreground: #051f0e;
 
    --muted: #908e81;
    --muted-foreground: #051f0e;
 
    --accent: #afcac5;
    --accent-foreground: #051f0e;
 
    --destructive: #ff0000;
    --destructive-foreground: #ffffff;
 
    --border: #908e81;
    --input: #908e81;
    --ring: #fff6e3;
  }
}
 
@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}
